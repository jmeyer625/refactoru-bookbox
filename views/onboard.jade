              input(type="checkbox", name="tony_hawk") 
              label Tony Hawk
            .ui.checkbox
              input(type="checkbox", name="sheryl_sandberg") 
              label Sheryl Sandberg
            .ui.checkbox
              input(type="checkbox", name="steve_jobs") 
              label Elon Musk
          .four.wide.column
            .ui.checkbox
              input(type="checkbox", name="jay-z") 
              label Jay-Z
            .ui.checkbox
              input(type="checkbox", name="malcolm_gladwell") 
              label Malcolm Gladwell
            .ui.checkbox
              input(type="checkbox", name="stephenie_meyer") 
              label Stephenie Meyer
            .ui.checkbox
              input(type="checkbox", name="hillary_clinton") 
              label Hillary Clinton
