body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin: 0
  background-color: #EEE
a
  color: #00B7FF
.container
  max-width: 1200px
  margin: auto
.landing-img
  background-image: url('/images/tatteredbooks.jpg')
  background-repeat: no-repeat
.main-img
  max-width: 1200px
.main-title
  font-size: 80px
.tag-line
  font-size: 60px
  width: 50%
.ui.checkbox
  display: block
.rec
  display: none
  background-color: white
  border-radius: 5px
  margin: 20px
  padding: 10px 50px
.cover-img
  height: 200px
.passage-div
  display: none
  font-size: 18px
  position: relative
.form-page
  position: relative
.form-buttons
  width: inherit
  text-align: center
  margin: auto
  .ui.button
    width: 150px
    font-size: 12px
    margin: 0 20px
  .ui.slider
    display: inline-block
.field
  min-height: 30px
  .button.next, .button.next-passage, .button.positive, .button.orange
    position: absolute
    right: 10px
    top: 10px
  .button.prev, .button.prev-passage
    position: absolute
    left: 10px
    top: 10px
.field.buttons
  min-height: 30px
.pre
  display: inline